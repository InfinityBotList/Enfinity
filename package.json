        "eslint": "^8.45.0",
        "husky": "^8.0.3",
        "lint-staged": "^11.0.0",
        "nodemon": "^2.0.20"
    },

    "_moduleAliases": {
        "@root": ".",
        "@client": "./source/client",
        "@database": "./source/database",
        "@enfinity": "./source/enfinity",
        "@handlers": "./source/handlers",
        "@plugins": "./source/plugins",
        "@configs": "./source/configs"
